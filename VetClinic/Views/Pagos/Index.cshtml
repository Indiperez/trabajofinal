@model IEnumerable<VetClinic.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />

    <!-- Enlace para crear nuevo pago -->
    <p class="text-right">
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Pago</a>
    </p>

    <!-- Tabla de Pagos -->
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FechaPago)</th>
                <th>@Html.DisplayNameFor(model => model.Monto)</th>
                <th>@Html.DisplayNameFor(model => model.IdCitaNavigation)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FechaPago)</td>
                    <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdCitaNavigation.IdCita)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdPago" class="btn btn-warning btn-sm">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.IdPago" class="btn btn-info btn-sm">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdPago" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
