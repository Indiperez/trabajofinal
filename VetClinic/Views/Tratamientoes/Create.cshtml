@model VetClinic.Models.Tratamiento

@{
    ViewData["Title"] = "Crear Tratamiento";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center">Nuevo Tratamiento</h4>
            <form asp-action="Create">
                <!-- Mostrar errores de validación -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Campo para el nombre del tratamiento -->
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Tratamiento</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del tratamiento" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Campo para la descripción del tratamiento -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Campo para el costo del tratamiento -->
                <div class="form-group">
                    <label asp-for="Costo" class="control-label">Costo</label>
                    <input asp-for="Costo" class="form-control" placeholder="Ingrese el costo del tratamiento" />
                    <span asp-validation-for="Costo" class="text-danger"></span>
                </div>

                <!-- Botón para guardar el tratamiento -->
                <div class="form-group text-center">
                    <input type="submit" value="Crear Tratamiento" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <!-- Enlace para regresar a la lista -->
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
