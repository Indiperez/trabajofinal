@model VetClinic.Models.Tratamiento

@{
    ViewData["Title"] = "Detalles del Tratamiento";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center">Tratamiento</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Costo)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Costo)
                </dd>
            </dl>

            <div class="text-center">
                <a asp-action="Edit" asp-route-id="@Model?.IdTratamiento" class="btn btn-warning mr-2">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>
