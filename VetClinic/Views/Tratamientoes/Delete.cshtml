@model VetClinic.Models.Tratamiento

@{
    ViewData["Title"] = "Eliminar Tratamiento";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="text-danger text-center">¿Está seguro de que desea eliminar este tratamiento?</h3>
            <div class="alert alert-warning">
                <strong>Advertencia:</strong> Esta acción no se puede deshacer.
            </div>

            <h4 class="text-center">Tratamiento</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Costo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Costo)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdTratamiento" />
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-danger mr-2">Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

