@model VetClinic.Models.Dueño

@{
    ViewData["Title"] = "Eliminar Dueño";
}

<h1 class="text-center mt-4 mb-5">@ViewData["Title"]</h1>

<div class="container">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirmación de Eliminación</h4>
        </div>
        <div class="card-body">
            <h5 class="text-center mb-4">¿Estás seguro de que deseas eliminar este dueño?</h5>

            <div>
                <h4>Detalles del Dueño</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Apellido)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Apellido)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Direccion)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.FechaRegistro)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.FechaRegistro)
                    </dd>
                </dl>
            </div>

            <!-- Formulario para Confirmación -->
            <div class="form-group text-center mt-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdDueño" />
                    <button type="submit" class="btn btn-danger btn-lg px-5">Eliminar</button> |
                    <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</div>
