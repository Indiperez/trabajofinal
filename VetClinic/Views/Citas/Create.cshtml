@model VetClinic.Models.Cita

@{
    ViewData["Title"] = "Crear Cita";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<h4 class="text-center">Crear una Nueva Cita</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Fecha y Hora -->
            <div class="form-group">
                <label asp-for="FechaHora" class="control-label"></label>
                <input asp-for="FechaHora" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaHora" class="text-danger"></span>
            </div>

            <!-- Motivo -->
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>

            <!-- Mascota -->
            <div class="form-group">
                <label asp-for="IdMascota" class="control-label"></label>
                <select asp-for="IdMascota" class="form-control" asp-items="ViewBag.IdMascota">
                    <option value="">Seleccionar Mascota</option>
                </select>
                <span asp-validation-for="IdMascota" class="text-danger"></span>
            </div>

            <!-- Botón de Enviar -->
            <div class="form-group text-center">
                <input type="submit" value="Crear Cita" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
