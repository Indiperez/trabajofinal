@model IEnumerable<VetClinic.Models.Cita>

@{
    ViewData["Title"] = "Citas";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-left">Lista de Citas</h4>
        <a asp-action="Create" class="btn btn-primary btn-lg">Crear Nueva Cita</a>
    </div>

    <!-- Tabla de Citas -->
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FechaHora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Motivo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdMascotaNavigation)
                </th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaHora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Motivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdMascotaNavigation.IdMascota)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.IdCita" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdCita" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.IdCita" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
